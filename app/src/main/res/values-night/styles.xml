<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_color_dark</item>
    </style>

    <style name="MainTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22sp</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="cornerRadius">@dimen/dimen_24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_text</item>
    </style>

    <style name="SettingsBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_color_dark</item>
    </style>

    <style name="ActivityHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsHeaderIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SettingsOptionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SettingsThemeSwitcher">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="switcher_on_color">@color/switcher_on_color</item>
        <item name="switcher_off_color">@color/text_gray</item>
        <item name="switcher_icon_color">@color/white</item>
    </style>

    <style name="SearchBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/black_text</item>
    </style>

    <style name="SearchEditextStyle">
        <item name="android:textColorHint">@color/black_text</item>
        <item name="android:background">@drawable/rounded_shape_night</item>
    </style>
    <style name="SearchEditextIconStyle">
        <item name="android:tint">@color/black_text</item>
    </style>
    <style name="SearchTrackDataTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_11sp</item>
    </style>

    <style name="EllipseIconStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="RefreshButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_14sp</item>
    </style>

    <style name="StylePlaceholderStatusMessage">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="AudioPlayer">
        <item name="android:background">@color/black_text</item>
    </style>

    <style name="TrackTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackArtist">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TrackFieldTitles">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackFieldValues">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>
