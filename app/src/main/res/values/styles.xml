<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainActivityBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="MainTitle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="cornerRadius">@dimen/dimen_24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black_text</item>
    </style>

    <style name="SettingsBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ActivityHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SettingsHeaderIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/black_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsHeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/icon_color</item>
    </style>

    <style name="SettingsOptionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="SearchBackgroundStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchEditextStyle">
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:background">@drawable/rounded_shape</item>
    </style>

    <style name="SearchEditextIconStyle">
        <item name="android:tint">@color/text_gray</item>
    </style>

    <style name="SearchTrackDataTextStyle">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/extra_small_text</item>
    </style>

    <style name="EllipseIconStyle">
        <item name="tint">@color/text_gray</item>
    </style>
</resources>
