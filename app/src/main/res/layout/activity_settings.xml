<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingsBackgroundStyle"
    android:paddingHorizontal="@dimen/dimen_16dp"
    android:paddingTop="@dimen/dimen_16dp">

    <LinearLayout
        style="@style/ActivityHeaderStyle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_back"
            style="@style/SettingsHeaderIconStyle"
            android:layout_marginStart="@dimen/dimen_4dp"
            android:src="@drawable/arrow_back" />

        <TextView
            style="@style/SettingsHeaderTextStyle"
            android:paddingStart="@dimen/dimen_28dp"
            android:text="@string/settings"
            tools:ignore="RtlSymmetry" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsTitle"
            android:layout_marginVertical="@dimen/dimen_20dp"
            android:layout_weight="1"
            android:text="@string/dark_theme" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:minWidth="@dimen/dimen_48dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/share_app"
        style="@style/SettingsOptionContainer"
        android:paddingVertical="@dimen/dimen_20dp">

        <TextView
            style="@style/SettingsTitle"
            android:layout_weight="1"
            android:text="@string/share_app" />

        <ImageView
            style="@style/SettingsIcon"
            android:src="@drawable/share" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_to_support"
        style="@style/SettingsOptionContainer"
        android:paddingVertical="@dimen/dimen_20dp">

        <TextView
            style="@style/SettingsTitle"
            android:layout_weight="1"
            android:text="@string/text_to_support" />

        <ImageView
            style="@style/SettingsIcon"
            android:src="@drawable/support" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_agreement"
        style="@style/SettingsOptionContainer"
        android:paddingVertical="@dimen/dimen_20dp">

        <TextView
            style="@style/SettingsTitle"
            android:layout_weight="1"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/SettingsIcon"
            android:src="@drawable/arrow_forward" />
    </LinearLayout>

</LinearLayout>
